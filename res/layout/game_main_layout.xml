                    android:paddingBottom="@dimen/line_dWidth"
                    android:paddingLeft="@dimen/line_width"
                    android:paddingRight="@dimen/line_width"
                    android:paddingTop="@dimen/line_width">

                    <com.cw.widget.Grid2048
                        android:id="@id/r03c01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gridback_2048"
                        android:gravity="center" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/grid_width"
                    android:layout_height="@dimen/grid_width"
                    android:background="@color/linecolor_2048"
                    android:paddingBottom="@dimen/line_dWidth"
                    android:paddingLeft="@dimen/line_width"
                    android:paddingRight="@dimen/line_width"
                    android:paddingTop="@dimen/line_width">

                    <com.cw.widget.Grid2048
                        android:id="@id/r03c02"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gridback_2048"
                        android:gravity="center" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/grid_width"
                    android:layout_height="@dimen/grid_width"
                    android:background="@color/linecolor_2048"
                    android:paddingBottom="@dimen/line_dWidth"
